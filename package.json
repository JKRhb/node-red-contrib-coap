{
  "name": "node-red-contrib-coap",
  "version": "0.8.0",
  "description": "CoAP support in Node-RED",
  "dependencies": {
    "cbor": "^8.1.0",
    "coap": "^1.0.5",
    "h5.linkformat": "0.0.0"
  },
  "devDependencies": {
    "coveralls": "^3.1.1",
    "jshint": "^2.13.4",
    "mocha": "^10.0.0",
    "node-red": "^3.0.0",
    "node-red-node-test-helper": "^0.3.0",
    "nyc": "^15.1.0"
  },
  "scripts": {
    "test": "nyc mocha --exit",
    "coverage": "nyc report --reporter=lcov --reporter=text-summary",
    "jshint": "jshint coap"
  },
  "mocha": {
    "globals": [
      "expect"
    ],
    "ignoreLeaks": false,
    "ui": "bdd",
    "reporter": "spec"
  },
  "jshintConfig": {
    "esversion": 11,
    "curly": true,
    "forin": true,
    "immed": true,
    "nonbsp": true,
    "strict": true,
    "loopfunc": true
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/JKRhb/node-red-contrib-coap.git"
  },
  "keywords": [
    "node-red",
    "node-red-contrib",
    "iot",
    "coap",
    "udp",
    "cbor"
  ],
  "node-red": {
    "version": ">=1.3.0",
    "nodes": {
      "coap-in": "coap/coap-in.js",
      "coap-request": "coap/coap-request.js"
    }
  },
  "author": {
    "name": "Justas Azna",
    "email": "justas@reederz.com"
  },
  "contributors": [
    {
      "name": "Eelco Wiersma"
    },
    {
      "name": "Lucien Guimier"
    },
    {
      "name": "Justas Azna"
    },
    {
      "name": "Jan Romann"
    }
  ],
  "engines": {
    "node": ">=12"
  }
}

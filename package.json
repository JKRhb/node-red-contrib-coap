{
  "name": "node-red-contrib-coap",
  "version": "0.4.1",
  "description": "CoAP support in Node-RED",
  "dependencies": {
    "cbor": "^7.0.2",
    "coap": "^0.24.0",
    "h5.linkformat": "0.0.0",
    "uri-js": "^4.4.1"
  },
  "devDependencies": {
    "coveralls": "^3.1.0",
    "jshint": "^2.12.0",
    "mocha": "^8.2.1",
    "node-red": "^1.2.7",
    "node-red-node-test-helper": "^0.2.5",
    "nyc": "^15.1.0"
  },
  "scripts": {
    "test": "nyc mocha --exit",
    "coverage": "nyc report --reporter=lcov --reporter=text-summary",
    "jshint": "jshint coap"
  },
  "mocha": {
    "globals": [
      "expect"
    ],
    "ignoreLeaks": false,
    "ui": "bdd",
    "reporter": "spec"
  },
  "jshintConfig": {
    "curly": true,
    "forin": true,
    "immed": true,
    "nonbsp": true,
    "strict": true,
    "loopfunc": true
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/JKRhb/node-red-contrib-coap.git"
  },
  "keywords": [
    "node-red",
    "node-red-contrib",
    "iot",
    "coap",
    "udp",
    "cbor"
  ],
  "node-red": {
    "nodes": {
      "coap-in": "coap/coap-in.js",
      "coap-request": "coap/coap-request.js"
    }
  },
  "author": {
    "name": "Justas Azna",
    "email": "justas@reederz.com"
  },
  "contributors": [
    {
      "name": "Eelco Wiersma"
    },
    {
      "name": "Lucien Guimier"
    },
    {
      "name": "Justas Azna"
    },
    {
      "name": "Jan Romann"
    }
  ]
}
